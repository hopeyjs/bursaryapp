<%- include('partials/header') %>

<!-- ======= Contact Section ======= -->
<section id="contact" class="contact section-bg">
    <div class="container">

        <div class="section-title">
            <h2 id="black">Login</h2>
            <p>Login in with username and password</p>
        </div>

        <div class="row">

            <div class="col-lg-12">
                <div class="col-lg-8 mt-5 mt-lg-0 reg">
                    <div>
                        <%if(message) {%>
                        <p> <%= message %> </p>
                        <%}%>

                    </div>

                    <form action="/login" method="POST" role="form" class="form" data-aos="fade-left">
                        <div class="form-row">
                            <div class="col-lg-12 form-group">
                                <input type="text" name="username" class="form-control" id="username" placeholder="Username"
                                    required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-lg-12 form-group">
                                <input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
                            </div>
                        </div>
                            <div class="text-center form"><button type="submit">Login</button></div>
                </form>

            </div>

        </div>

    </div>
</section><!-- End Contact Section -->

<%- include('partials/footer') %>